<%# 
    Expects data: {
        header: [
            column1,
            column2,
            column3,
            ...
        ],
        order: [
            column1,
            column2,
            column3,
            ...
        ],
        entries: [
            {
                column1,
                column2,
                column3,
                ...
            },
            ...
        ]
    }
%>
<thead>
    <tr>
    <td class="button-column-width"><button class="button button-new" onclick="showAdd()">New</button></td>
    <td class="button-column-width"><button class="button button-reset" onclick="reset()">Reset</button></td>
    <% for (const heading of data.header) { %>
        <th><%= heading %></th>
    <% } %>
    </tr>
</thead>
<tbody>
    <% for (const entry of data.entries) { %>
        <tr>
            <!-- <td><button class="button button-update" <%- `onclick="editLineSetup(event, ${entry[data.idField]})"` %>>Update</button></td> -->
            <td><button class="button button-update" <%- `onclick='showUpdate(${entry[data.idField]}, ${JSON.stringify(entry)})'` %>>Update</button></td>
            <td><button class="button button-delete" <%- `onclick="deleteLine(${entry[data.idField]})"` %>>Delete</button></td>
            
            <% data.order.forEach((key) => { %>
                <td><%= entry[key] %></td>
            <% }); %>
        </tr>
    <% } %>
</tbody>
<input type="hidden" id="orderBin" value="<%= JSON.stringify(data.order) %>" />